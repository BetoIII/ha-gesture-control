# Home Assistant Configuration
# Copy this file to .env and fill in your values

# Home Assistant Long-Lived Access Token
# Generate at: http://YOUR_HA_IP:8123/profile
HA_TOKEN=your_long_lived_access_token_here

# Home Assistant MCP Server URL
HA_MCP_URL=http://localhost:8123/mcp_server/sse

# Home Assistant Base URL (for REST API fallback)
HA_BASE_URL=http://localhost:8123

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Gesture Recognition Configuration
GESTURE_CONFIDENCE_THRESHOLD=0.8
GESTURE_COOLDOWN_SECONDS=2

# Camera Configuration
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gesture_control.log
